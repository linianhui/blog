{
  "log": {
    "logLevel": "none"
  },
  "inbounds": [
    {
      "listen": "$TEMPLATE_SERVER_IP",
      "port": 443,
      "protocol": "vmess",
      "settings": {
        "clients": [
          {
            "id": "$TEMPLATE_CLIENT_ID",
            "alterId": 16
          }
        ]
      },
      "streamSettings": {
        "network": "http",
        "httpSettings": {
          "host": [
            "$TEMPLATE_SERVER_DOMAIN_NAME"
          ],
          "path": "/"
        },
        "security": "tls",
        "tlsSettings": {
          "serverName": "$TEMPLATE_SERVER_DOMAIN_NAME",
          "alpn": [
            "h2"
          ],
          "allowInsecure": false,
          "allowInsecureCiphers": false,
          "disableSystemRoot": true,
          "certificates": [
            $TEMPLATE_CERTIFICATE_JSON
          ]
        }
      }
    }
  ],
  "outbounds": [
    {
      "protocol": "freedom",
      "settings": {}
    }
  ]
}